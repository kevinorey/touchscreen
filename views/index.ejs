<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Barmate</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="liquorType" type="text" class="ghost-input" placeholder="Enter a Liquor Type" required>
          <input type="submit" class="ghost-button" value="Get Liquor Types">
        </form>
        <% if(data !== null){ %>
			<table>
				<% for(var i=0; i < data.length; i++) { %>
					<tr>
						<td><%= data[i].strDrink %></td>
						<td><%= data[i].idDrink %></td>
					</tr>
				<% } %>
			</table>
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
